<html>
    <head>
        <link href="<%= url('/styles.css') %>" rel="stylesheet" type="text/css" />
    </head>
    <body>
      <header>
        <div class="logo"><a href="/spaces"><img src="../logo.png"></a></div>
        <div class="menu">
          <a href="/">Log Out</a>
          <a href="/spaces">All Spaces</a>
          <a href="/spaces/<%= @booking.space_id %>">Back to <%= @space.name %></a>
        </div>
      </header>

      <div class="container">
        <h1>Booking Request Confirmation</h1>
        <div class="booking-card">
          <div class="info">
            <p><strong>Space: </strong><a href="/spaces/<%= @booking.space_id %>"><%= @space.name %></a></p>
            <p><strong>Username: </strong><%= @user.username.capitalize %></p>
            <p><strong>Start Date: </strong><%= DateTime.parse(@booking.start_date).strftime("%d/%m/%Y") %></p>
            <p><strong>End Date:</strong> <%= DateTime.parse(@booking.end_date).strftime("%d/%m/%Y") %></p>
            <p><strong>Status:</strong> Awaiting Confirmation </p>
          </div>
        </div>
      </div>
    </body>


</html
